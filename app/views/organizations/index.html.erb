<html>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <body>
    <h1>WorldChicago partner organizations</h1>
    <div class="w3-padding w3-xlarge w3-teal">
        Welcome!
    </div>
    <table>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Description</th>
            <th>Delete</th>
        </tr>

        <% @organizations.each do |organization| %>
            <tr>
                <td><%= link_to organization.name, organization_path(organization) %></td>
                <td><%= organization.address %></td>
                <td><%= organization.description %></td>
                <td><%= link_to organization_path(organization) do %><i class="fa fa-trash"><% end %></i></td>
            </tr>
        <% end %>
    </table>
    </body>
</html>
